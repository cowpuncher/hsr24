{% extends "template/layout.twig" %}

{% import '../components/menu/menu.twig' as menu %}
{% import '../components/hamburger/hamburger.twig' as hamburger %}
{% import '../components/social/social.twig' as social %}
{% import '../components/pay/pay.twig' as pay %}
{% import '../components/breadcrumbs/breadcrumbs.twig' as breadcrumbs %}
{% import '../components/card/card.twig' as card %}

{% block title %}{{ page_title }}{% endblock %}

{% block bodyClass %}page-favs{% endblock %}

{% block content %}

	<div class="container">
        <div class="container__inner">
            {# хлебные крошки #}
            {{ breadcrumbs.breadcrumbs(breadcrumbsList) }}

            {# заголовок #}
            <h1 class="h2 elem-title elem-title--row">
                <span>Избранное <span class="hidden-lg hidden-xl color-gray-light elem-title__num">2</span></span>
                <a href="#" class="elem-icon color-red elem-title__remove hidden-lg hidden-xl" data-remove-all="">Очистить</a>
            </h1>

            {# список карточек #}
            <div class="card__list mobile-list" data-card-list>
                {% for item in cardClist %}
                    {{ card.card(item) }}
                {% endfor %}
            </div>

            <div class="elem-more__row">
                <a href="#" class="elem-more">
                    {{ svg.icon('show-more') }}
                    <span>Показать еще</span>
                </a>
            </div>
        </div>
	</div>

    <a href="#" class="online-support">
        {{ svg.icon('ask') }}
    </a>

{% endblock %}

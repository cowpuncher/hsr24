{% macro priceAside(data) %}
	<div class="price {% if data.filterAside.priceClass %}{{ data.filterAside.priceClass }}{% endif %}">
        <div id="slider-price" class="price__slider" data-slider-price data-start="{{ data.priceStart }}" data-end="{{ data.priceEnd }}" data-min="{{ data.priceMin }}" data-max="{{ data.priceMax }}"></div>
        <div class="price__input">
            <label class="price__label" data-before="от">
                <input id="lower-value" type="text" class="elem-input elem-input--md elem-input--price elem-input--price-label" data-lower-value>
            </label>
            <label class="price__label" data-before="до">
                <input id="upper-value" type="text" class="elem-input elem-input--md elem-input--price elem-input--price-label" data-upper-value>
            </label>
        </div>
    </div>
{% endmacro %}

